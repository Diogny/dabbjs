{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017", "ScriptHost"],
		"module": "esnext",
		"allowJs": false,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": false,
		"noEmitOnError": true,
		"declaration": true,
		"outDir": "./dist",
		"baseUrl": "."
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules", "dist"
	]
}