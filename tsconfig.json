{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": false,
		"noEmitOnError": true,
		"declaration": true,
		"outDir": "./dist",
		"baseUrl": "."
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}