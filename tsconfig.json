{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": false,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": false,
		"noEmitOnError": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"baseUrl": "."
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}